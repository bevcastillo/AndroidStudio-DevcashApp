<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FinalPurchasePaymentFragment"
    android:orientation="horizontal"
    android:id="@+id/finalpurchase_content">

    <fragment
        android:id="@+id/purchasesummary_fragment"
        android:name="com.example.devcash.Fragments.PurchaseSummaryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_purchase_summary">

    </fragment>

    <View
        style="@style/Divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/sendreceipt_fragment"
        android:name="com.example.devcash.Fragments.SendReceiptFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_send_receipt">

    </fragment>

</LinearLayout>