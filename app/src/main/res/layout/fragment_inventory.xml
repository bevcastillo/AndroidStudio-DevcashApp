<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InventoryFragment"
    android:orientation="horizontal"
    android:id="@+id/inventory_content">

    <fragment
        android:id="@+id/inventorylist_fragment"
        android:name="com.example.devcash.InventoryListFragment"
        tools:layout="@layout/fragment_inventory_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </fragment>

    <View
        style="@style/Divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/inventory_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">


    </fragment>



</LinearLayout>