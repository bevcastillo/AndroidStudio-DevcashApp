<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/whiteBG"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:padding="@dimen/padding_10">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/manufacturing" />

        <TextView
            android:id="@+id/txtservice_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Service name"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/page_title"
            android:layout_marginLeft="@dimen/text_padding"/>

        <TextView
            android:id="@+id/txtservice_disc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Discount"
            android:textColor="@color/icon_light"
            android:textSize="@dimen/text_inputs"
            android:layout_marginLeft="@dimen/padding_50"
            android:gravity="left"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtservice_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Status"
            android:textColor="@color/icon_light"
            android:textSize="@dimen/text_inputs"
            android:layout_marginLeft="@dimen/padding_50"
            android:gravity="left"/>

        <TextView
            android:id="@+id/txtservice_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_inputs"
            android:layout_marginRight="@dimen/padding_50"
            android:gravity="right" />
    </LinearLayout>

</android.support.v7.widget.CardView>