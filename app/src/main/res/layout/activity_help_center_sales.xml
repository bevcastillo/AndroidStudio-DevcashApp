<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings_UI.HelpCenterSales"
    android:background="@color/whiteDarker">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/searchArticlesLayout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/help_linear_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/whiteBG"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/icon_light"
                    android:hint="Search for articles.."
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="@dimen/padding_30"
                    android:layout_marginRight="@dimen/padding_30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sale"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6 articles in this collection"
                        android:textColor="@color/icon_light"/>

                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_helpgetstarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How to make Sales?"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to make sales and use Devcash for your purchase transaction."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QR Code Scanning using your Built-in Camera"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to use Devcash"
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sell items by Weight"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to sell items by using Weight."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creating Discounts"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create discounts."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Customer Receipt"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn the different ways to send e-receipt to your customers."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginBottom="@dimen/padding_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Negative Stock Alerts"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to enable notifications to inform you about low stocks."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>