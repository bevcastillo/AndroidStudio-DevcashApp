<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpCenterInventory"
    android:background="@color/whiteDarker">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/searchArticlesLayout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/help_linear_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/whiteBG"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/icon_light"
                    android:hint="Search for articles.."
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="@dimen/padding_30"
                    android:layout_marginRight="@dimen/padding_30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/storage"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inventory"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6 articles in this collection"
                        android:textColor="@color/icon_light"/>

                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_helpgetstarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creation of Products and Service Variants"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create variants."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creation of Products and Services"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create products and services on your inventory."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add QR Codes on Products and Services"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How to add QR Codes to items."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import and Exporting nventory"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to import and export your inventory."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Discounts"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create discounts."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/padding_50"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Product or Service Category"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create categories."
                        android:textColor="@color/dark_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Updated over a week ago"
                        android:textColor="@color/icon_light"
                        android:textSize="@dimen/small_title"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>