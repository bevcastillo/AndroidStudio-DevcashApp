<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WhyDevcash"
    android:background="@color/whiteDarker">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/searchArticlesLayout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/help_linear_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/whiteBG"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/icon_light"
                    android:hint="Search for articles.."
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="@dimen/padding_30"
                    android:layout_marginRight="@dimen/padding_30"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_helpgetstarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBG"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/padding_50"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Why Devcash?"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_inputs"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loremipsum"
                        android:textColor="@color/dark_text"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loremipsum"
                        android:textColor="@color/dark_text"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Did this answer your question?"
                            android:textSize="@dimen/text_inputs"
                            android:textColor="@color/dark_text"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/sad_emoji"
                                android:padding="5dp"/>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/shocked"
                                android:padding="5dp"/>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/happy_emoji"
                                android:padding="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>