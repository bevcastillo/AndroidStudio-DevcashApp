<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubscriptionActivity"
    android:orientation="vertical"
    android:background="@color/whiteDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/padding_20">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/text_padding"
                    android:background="@color/whiteBG"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/text_padding"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_plant"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/free_label"
                            android:layout_marginTop="@dimen/padding_20"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_1"
                            android:textSize="@dimen/padding_20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subs_desc"
                            android:textSize="@dimen/padding_20"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/curr_plan"
                            android:layout_marginTop="@dimen/padding_30"
                            android:layout_marginBottom="@dimen/padding_30"
                            android:background="@drawable/custom_btn_stroke"
                            android:padding="@dimen/text_padding"
                            android:textColor="@color/colorPrimary"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/text_padding"
                    android:background="@color/whiteBG"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/text_padding"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_revenue"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basic_label"
                            android:layout_marginTop="@dimen/padding_20"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basic_def"
                            android:textSize="@dimen/padding_20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subs_desc"
                            android:textSize="@dimen/padding_20"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_basic"
                            android:layout_marginTop="@dimen/padding_30"
                            android:layout_marginBottom="@dimen/padding_30"
                            android:background="@drawable/custom_btn"
                            android:padding="@dimen/text_padding"
                            android:textColor="@color/whiteBG"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/text_padding"
                    android:background="@color/whiteBG"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/text_padding"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_company"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pro_label"
                            android:layout_marginTop="@dimen/padding_20"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/padding_30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pro_def"
                            android:textSize="@dimen/padding_20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subs_desc"
                            android:textSize="@dimen/padding_20"
                            android:layout_marginTop="@dimen/padding_30"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_pro"
                            android:layout_marginTop="@dimen/padding_30"
                            android:layout_marginBottom="@dimen/padding_30"
                            android:background="@drawable/custom_btn"
                            android:padding="@dimen/text_padding"
                            android:textColor="@color/whiteBG"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

</LinearLayout>