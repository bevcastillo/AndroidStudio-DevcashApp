<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerPaymentActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received:"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_18"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="180dp"
        android:paddingRight="180dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_cashreceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter cash received"
            android:inputType="numberDecimal"
            android:padding="20dp"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/text_inputs" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/btnchargecustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textchargeamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charge 0.00"
            android:textColor="@color/whiteBG"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>