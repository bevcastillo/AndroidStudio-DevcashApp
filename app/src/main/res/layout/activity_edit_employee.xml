<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EDIT_UI.EditEmployee"
    android:orientation="vertical"
    android:background="@color/whiteDarker">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/emp_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_30"
                android:background="@color/whiteBG"
                android:padding="@dimen/text_padding"
                android:layout_marginRight="@dimen/padding_150"
                android:layout_marginLeft="@dimen/padding_150"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30"
                    android:layout_marginBottom="@dimen/padding_30"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_30"
                    android:paddingRight="@dimen/padding_30">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_info"
                        android:textColor="@color/colorPrimary" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textinput_editemplname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/lname"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/page_title"
                            android:enabled="false"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textinput_editempfname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fname"
                            android:inputType="text"
                            android:padding="@dimen/text_padding"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/page_title"
                            android:enabled="false"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/text_input_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_date_range"
                            android:drawablePadding="@dimen/text_padding"
                            android:drawableTint="@color/icon_light"
                            android:hint="@string/birthdate"
                            android:inputType="text"
                            android:padding="@dimen/text_padding"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/page_title"
                            android:visibility="gone"/>

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/padding_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"/>

                        <RadioGroup
                            android:id="@+id/radiogroup_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radiomale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:buttonTint="@color/colorPrimary"
                                android:layout_marginLeft="@dimen/padding_20"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/radiofemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:buttonTint="@color/colorPrimary"
                                android:layout_marginLeft="@dimen/padding_10"/>


                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnumber_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_top">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/text_input_emp_pnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/pnumber"
                                android:inputType="number"
                                android:padding="@dimen/text_padding"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="@dimen/page_title" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textinp_empaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Home Address"
                                android:inputType="text"
                                android:padding="@dimen/text_padding"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="@dimen/page_title" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_top">

                        <LinearLayout
                            android:id="@+id/emp_task_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/padding_top">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/task"
                                android:textSize="@dimen/small_title"/>

                            <Spinner
                                android:id="@+id/spinner_emptask"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/task_assign"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:paddingTop="@dimen/padding_top"/>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pincode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_30"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_30">

                        <Button
                            android:id="@+id/btn_pincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_btn_stroke"
                            android:padding="@dimen/text_padding"
                            android:text="@string/add_pincode"
                            android:textColor="@color/colorPrimary"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_30"
            android:background="@color/whiteBG"
            android:padding="@dimen/text_padding"
            android:layout_marginRight="@dimen/padding_150"
            android:layout_marginLeft="@dimen/padding_150">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_30"
            android:layout_marginBottom="@dimen/padding_30"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="@dimen/small_title"/>

                <TextView
                    android:id="@+id/editempusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/page_title"
                    android:text="johndoe123"
                    android:textColor="@color/dark_text"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/small_title"/>

                <TextView
                    android:id="@+id/editempname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/page_title"
                    android:text="John Doe"
                    android:textColor="@color/dark_text"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/small_title"/>

                <TextView
                    android:id="@+id/editempgender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/page_title"
                    android:text="Male/Female"
                    android:textColor="@color/dark_text"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:textSize="@dimen/small_title"/>

                <TextView
                    android:id="@+id/editempnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/page_title"
                    android:text="09065283986"
                    android:textColor="@color/dark_text"
                    android:paddingTop="10dp"/>
            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/emp_account_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_20"
                android:background="@color/whiteBG"
                android:padding="@dimen/text_padding"
                android:layout_marginLeft="@dimen/padding_150"
                android:layout_marginRight="@dimen/padding_150"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30"
                    android:layout_marginBottom="@dimen/padding_30"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_30"
                    android:paddingRight="@dimen/padding_30">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_top">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textinput_empuname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/username"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/text_padding"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="@dimen/page_title" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_top">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textinput_empemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email_address"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/text_padding"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="@dimen/page_title" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:passwordToggleEnabled="true"
                            app:counterEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textinput_emppassw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/passw"
                                android:inputType="textPassword"
                                android:padding="@dimen/text_padding"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="@dimen/page_title" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:passwordToggleEnabled="true">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textinput_empconfpassw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/confpassw"
                                android:inputType="textPassword"
                                android:padding="@dimen/text_padding"
                                android:textSize="@dimen/page_title"/>

                        </android.support.design.widget.TextInputLayout>

                        <EditText
                            android:id="@+id/acct_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/acct_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_20"
            android:background="@color/whiteBG"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/padding_150"
            android:layout_marginRight="@dimen/padding_150">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_30"
            android:layout_marginBottom="@dimen/padding_30"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30">

            <TextView
                android:id="@+id/empeditstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/task"
                    android:textSize="@dimen/small_title"/>

                <Spinner
                    android:id="@+id/spinneredit_emptask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/task_assign"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:paddingTop="@dimen/padding_top"/>


            </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/emp_image_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_marginBottom="@dimen/padding_30"
                android:background="@color/whiteBG"
                android:padding="@dimen/text_padding"
                android:layout_marginLeft="@dimen/padding_150"
                android:layout_marginRight="@dimen/padding_150">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30"
                    android:layout_marginBottom="@dimen/padding_30"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_30"
                    android:paddingRight="@dimen/padding_30">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/representation_pos"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/discount_value_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_top"
                        android:gravity="center|left"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/emp_photo"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:maxWidth="@dimen/text_padding"
                            android:maxHeight="@dimen/text_padding"
                            android:src="@drawable/picture" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/padding_30">

                            <LinearLayout
                                android:id="@+id/empchoosephoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/text_padding">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_folder"
                                    android:tint="@color/icon_light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/text_padding"
                                    android:text="@string/choose_photo"
                                    android:textAllCaps="true"
                                    android:textColor="@color/dark_text" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/emptakephoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/text_padding">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_camera"
                                    android:tint="@color/icon_light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/text_padding"
                                    android:text="@string/take_photo"
                                    android:textAllCaps="true"
                                    android:textColor="@color/dark_text" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/padding_30">

                <TextView
                    android:id="@+id/txtempdeactivate"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/padding_150"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="DEACTIVATE EMPLOYEE"
                    android:textColor="@color/color_red"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="3"
                    android:padding="@dimen/text_padding"
                    android:layout_marginBottom="@dimen/padding_top"
                    android:background="@color/whiteBG"
                    android:layout_marginRight="@dimen/padding_150">

                    <LinearLayout
                        android:id="@+id/layout_delemployee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_delete"
                            android:tint="@color/colorGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="delete employee"
                            android:textAllCaps="true"
                            android:paddingLeft="20dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>