<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/purch_subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subtotal"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

        <TextView
            android:id="@+id/purch_subtotalvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/purch_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discount"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

        <TextView
            android:id="@+id/purch_discountvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/purch_vat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VAT"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

        <TextView
            android:id="@+id/purch_vatvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/purch_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zero-Rated"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

        <TextView
            android:id="@+id/purch_zerovalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_inputs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/purch_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textColor="@color/dark_text"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/purch_totalvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/dark_text"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>