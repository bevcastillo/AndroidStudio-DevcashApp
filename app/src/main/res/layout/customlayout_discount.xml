<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:padding="@dimen/padding_10"
        android:id="@+id/discountLayout">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/percentage" />

        <TextView
            android:id="@+id/text_disccode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Discount Name"
            android:textColor="@color/dark_text"
            android:layout_marginLeft="@dimen/text_padding"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding_50">

        <TextView
            android:id="@+id/text_discstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textColor="@color/icon_light"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/txt_discend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textColor="@color/icon_light"
            android:textSize="14dp"/>

    </LinearLayout>

        <TextView
            android:id="@+id/txt_disctype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Percentage"
            android:textColor="@color/dark_text"
            android:textSize="16dp"
            android:layout_marginLeft="@dimen/padding_30"
            android:gravity="left"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textdisc_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/status"
            android:textColor="@color/dark_text"
            android:layout_marginLeft="@dimen/padding_30"
            android:gravity="left"/>


        <TextView
            android:id="@+id/txt_discvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dark_text"
            android:text="0.00"
            android:paddingRight="@dimen/padding_30"
            android:gravity="right"/>

    </LinearLayout>
</android.support.v7.widget.CardView>