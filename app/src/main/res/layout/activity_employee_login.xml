<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeLoginActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/backdrop_image"
        android:alpha="0.5"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@color/whiteBG"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="100dp"
        app:cardBackgroundColor="@color/whiteBG"
        android:alpha="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login for Employees"
                android:textStyle="bold"
                android:textSize="@dimen/page_title"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/padding_30"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                app:errorEnabled="true"
                android:id="@+id/layout_empemail">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textinput_empemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="@dimen/text_padding"
                    android:textSize="@dimen/page_title"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                android:id="@+id/layout_emppassw">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textinput_emppassw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/passw"
                    android:inputType="textPassword"
                    android:padding="@dimen/text_padding"
                    android:textSize="@dimen/page_title"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_loginemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:text="@string/login"
                android:textColor="@color/whiteBG"
                android:padding="@dimen/padding_top"/>

            <TextView
                android:id="@+id/forgot_passw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/forgot_passw"
                android:textColor="@color/blue_link"
                android:textSize="@dimen/secondary_text" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
